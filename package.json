{
  "name": "css-variable-hover",
  "displayName": "CSS Variable Hover",
  "description": "Shows CSS variable and Tailwind CSS custom classes values on hover",
  "version": "1.0.3",
  "publisher": "AhmedMahran",
  "license": "MIT",
  "engines": {
    "vscode": "^1.96.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ahmedd-mahmoud/css-variable-hover.git"
  },
  "homepage": "https://github.com/ahmedd-mahmoud/css-variable-hover/blob/main/README.md",
  "icon": "logo.png",
  "keywords": [
    "tailwind",
    "tailwindcss",
    "css-var",
    "css-variables",
    "hover",
    "css",
    "scss",
    "variables",
    "intellisense",
    "vscode"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:vue"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cssVarHover.refreshCache",
        "title": "Refresh CSS Variables Cache"
      }
    ],
    "configuration": {
      "title": "CSS Variable Values",
      "properties": {
        "cssVarHover.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable CSS variable value hover"
        },
        "cssVarHover.watchedFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional files to watch for CSS variables"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.96.0",
    "mocha": "^11.0.1",
    "ts-loader": "^9.5.2",
    "typescript": "^4.5.5",
    "webpack": "^5.97.1",
    "webpack-cli": "^4.10.0"
  }
}
